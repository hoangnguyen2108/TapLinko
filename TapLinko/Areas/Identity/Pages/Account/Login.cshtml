@page
@model LoginModel

@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = "Log in";
}

<style>
    .login-wrapper {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        min-height: 90vh;
        gap: 5rem;
        padding: 4rem 3rem;
    }

    .login-form-box {
        width: 500px;
        padding: 3rem;
    }

        .login-form-box h2 {
            font-size: 2.2rem;
            margin-bottom: 2rem;
            font-weight: 600;
            text-align: center;
        }

    .branding-box {
        width: 500px;
        padding-top: 6.5rem; /* 🔽 Pushes TapLinko down to align with email */
    }

        .branding-box h1 {
            font-size: 4rem;
            font-weight: 700;
            color: #606770;
            margin-bottom: 1rem;
        }

        .branding-box p {
            font-size: 1.25rem;
            color: #606770;
            line-height: 1.7;
        }

    .form-floating label {
        font-size: 1rem;
    }

    .form-control {
        font-size: 1.1rem;
        padding: 1.25rem 1rem;
    }

    .form-check-label {
        font-size: 1rem;
    }

    .btn-lg {
        font-size: 1.2rem;
        padding: 0.75rem;
    }

    .register-link {
        margin-top: 2rem;
        font-size: 1.05rem;
        text-align: center;
    }

        .register-link a {
            text-decoration: none;
            color: #0d6efd;
            font-weight: 500;
        }

            .register-link a:hover {
                text-decoration: underline;
            }
</style>

<div class="login-wrapper container">
    <!-- Login Form -->
    <div class="login-form-box">
        <h2>Log in to TapLinko</h2>

        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-4">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-check mb-4">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                <label asp-for="Input.RememberMe" class="form-check-label">
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>

            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
        </form>

        <div class="register-link">
            Don’t have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Create one here</a>.
        </div>
    </div>

    <!-- Branding (Right) -->
    <div class="branding-box">
        <h1>TapLinko</h1>
        <p>
            Create your smart digital profile.<br />
            Share it with a tap.<br />
            Powered by NFC.
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@model TapLinko.Models.ViewModel.ViewModel

@{
    Layout = "~/Views/Shared/_UserPublicLayout.cshtml";
    var linkInfo = Model.LinkPageLinkItemVMs.FirstOrDefault(); // General info
}

<style>
    body {
        background: linear-gradient(to bottom, #f0f2f5, #ffffff);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .link-button {
        transition: all 0.2s ease-in-out;
    }

        .link-button:hover {
            transform: scale(1.02);
            background-color: #f0f0f0;
        }

    .page-title {
        color: #cccccc;
    }

    .page-bio {
        color: #aaaaaa;
    }
</style>

<div class="container py-5 px-3">
    @if (linkInfo != null)
    {
        <!-- Page Title & Bio -->
        <div class="text-center mb-5">
            <h1 class="fw-bold page-title fs-1">@linkInfo.LinkPageTitle</h1>
            <p class="page-bio fs-5">@linkInfo.Bio</p>
        </div>

        <!-- Shared Links -->
        <div class="d-flex flex-column align-items-center gap-3">
            @if (Model.LinkPageLinkItemVMs1 != null && Model.LinkPageLinkItemVMs1.Any())
            {
                @foreach (var item in Model.LinkPageLinkItemVMs1.OrderBy(x => x.Order))
                {
                    <a href="@item.Url" target="_blank"
                       class="btn btn-outline-dark link-button w-100 py-3 shadow-sm text-decoration-none fw-semibold"
                       style="max-width: 600px;">
                        @item.Label
                    </a>
                }
            }
            else
            {
                <p class="text-muted text-center">No links available.</p>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center">
            No link page data found.
        </div>
    }
</div>
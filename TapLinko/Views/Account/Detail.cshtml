@model TapLinko.Models.ViewModel.ViewModel

@{
    ViewData["Title"] = "Link Page Detail";
    var linkInfo = Model.LinkPageLinkItemVMs.FirstOrDefault(); // General info
}

<div class="container mt-5">
    @if (linkInfo != null)
    {
        <!-- Banner -->
        <div class="card shadow mb-4">
            <img src="@linkInfo.ProfileImageUrl" class="card-img-top" alt="Banner" style="height: 200px; object-fit: cover;" />
            <div class="card-body text-center">
                <h2 class="mt-3">@linkInfo.LinkPageTitle</h2>
                <p class="text-muted">@linkInfo.Bio</p>
            </div>
        </div>

        <!-- Link Items -->
        <h4 class="mb-3">Shared Links</h4>
        @if (Model.LinkPageLinkItemVMs1 != null && Model.LinkPageLinkItemVMs1.Any())
        {
            <ul class="list-group">
                @foreach (var item in Model.LinkPageLinkItemVMs1.OrderBy(x => x.Order))
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <strong>@item.Label</strong><br />
                            <a href="@item.Url" target="_blank">@item.Url</a>
                        </div>
                        <span class="badge bg-primary rounded-pill">#@item.Order</span>
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="text-muted">No links available.</p>
        }
    }
    else
    {
        <div class="alert alert-warning">
            No link page data found.
        </div>
    }
</div>
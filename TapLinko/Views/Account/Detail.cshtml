@model TapLinko.Models.ViewModel.LinkPageLinkItemVM

@{
    Layout = null; // or set a layout if you want to use shared styles
    ViewData["Title"] = "Link Page Detail";
}

<div class="container mt-5">
    <div class="card shadow border-0">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">@Model.LinkPageTitle</h4>
        </div>

        <div class="card-body">
            <div class="text-center mb-4">
                @if (!string.IsNullOrEmpty(Model.ProfileImageUrl))
                {
                    <img src="@Model.ProfileImageUrl" alt="Profile Image" class="rounded-circle border" width="100" height="100" />
                }
                else
                {
                    <div class="text-muted">No profile image provided</div>
                }
            </div>

            <div class="mb-3">
                <h5>Bio</h5>
                <p>@Model.Bio</p>
            </div>
        </div>

        
        <div class="card-footer text-end">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
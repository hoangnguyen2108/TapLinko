@model TapLinko.Models.ViewModel.ViewModel

@{
    ViewData["Title"] = "My Link Page";
    var linkPage = Model.LinkPages.FirstOrDefault();
}

<div class="container mt-5">
    @if (linkPage != null)
    {
        <!-- LinkPage Card -->
        <div class="card shadow mb-4">
            <img src="@linkPage.BannerImageUrl" class="card-img-top" alt="Banner" style="height: 200px; object-fit: cover;" />
            <div class="card-body text-center">
                <img src="@linkPage.ProfileImageUrl" class="rounded-circle border border-2" width="100" height="100" alt="Profile" />
                <h2 class="mt-3">@linkPage.LinkPageTitle</h2>
                <p class="text-muted">@linkPage.Bio</p>
            </div>
        </div>

        <!-- Buttons -->
        <div class="mb-4 text-end">
            <a asp-controller="Account" asp-action="Detail" asp-route-id="@linkPage.LinkPageId" class="btn btn-primary">
                Extract Link to Public
            </a>

            <a asp-controller="Account" asp-action="Create" asp-route-id="@linkPage.LinkPageId" class="btn btn-primary">
                Create New
            </a>
        </div>

        <!-- Container where AJAX-loaded detail will be injected -->
        <div id="detailContainer" class="mb-4"></div>

        <!-- Link Items List -->
        <h4 class="mb-3">Your Links</h4>
        @if (Model.LinkPageLinkItemVMs.Any())
        {
            <ul class="list-group">
                @foreach (var item in Model.LinkPageLinkItemVMs.OrderBy(x => x.Order))
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <strong>@item.Label</strong><br />
                            <a href="@item.Url" target="_blank">@item.Url</a>
                        </div>
                        <div class="d-flex align-items-center">
                            <span class="badge bg-secondary rounded-pill">#@item.Order</span>
                            <a asp-controller="Account" asp-action="Delete" asp-route-id="@item.LinkItemId" class="btn btn-danger btn-sm ms-2">
                                Delete
                            </a>

                            <a asp-controller="Account" asp-action="Edit" asp-route-id="@item.LinkItemId" class="btn btn-warning btn-sm ms-2">
                                Edit
                            </a>
                        </div>
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="text-muted">You don't have any links yet.</p>
        }
    }
    else
    {
        <div class="alert alert-warning">
            No LinkPage found for your account.
        </div>
    }
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).on("click", ".extract-link-btn", function () {
            var id = $(this).data("id");

            $.ajax({
                url: '/Account/Detail/' + id,
                type: 'GET',
                success: function (result) {
                    $("#detailContainer").html(result);
                },
                error: function () {
                    alert("Failed to load details.");
                }
            });
        });
    </script>
}
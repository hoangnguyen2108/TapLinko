@model TapLinko.Models.ViewModel.ViewModel

@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    ViewData["Title"] = "My Link Page";
    var linkPage = Model.LinkPages.FirstOrDefault();
    var publicUrl = $"{Context.Request.Scheme}://{Context.Request.Host}/view/{linkPage.PublicSlug}";
}

<!-- Styling for modern look -->
<style>
    body {
        background: linear-gradient(to bottom, #f8f9fa, #ffffff);
    }

    .link-button {
        transition: all 0.2s ease-in-out;
    }

        .link-button:hover {
            transform: scale(1.02);
            background-color: #f0f0f0;
        }

    .public-link input {
        background-color: #fff;
    }

    .btn-lg {
        font-size: 1.1rem;
        padding: 0.75rem 2rem;
    }

    /* Truncate long URLs */
    .truncate-url {
        max-width: 300px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        display: inline-block;
        vertical-align: middle;
    }
</style>

<div class="container py-5">
    @if (linkPage != null)
    {
        <!-- Title & Bio Section -->
        <div class="text-center mb-5">
            <h1 class="fw-bold display-5">@linkPage.LinkPageTitle</h1>
            <p class="text-muted lead">@linkPage.Bio</p>
        </div>

        <!-- Link Buttons -->
        <div class="d-flex flex-column align-items-center mb-5">
            @if (Model.LinkPageLinkItemVMs.Any())
            {
                @foreach (var item in Model.LinkPageLinkItemVMs.OrderBy(x => x.Order))
                {
                    <a href="@item.Url" target="_blank"
                       class="btn btn-outline-dark link-button w-100 my-2 py-3 shadow-sm text-decoration-none fw-semibold"
                       style="max-width: 600px;">
                        <span class="truncate-url" title="@item.Url">@item.Label</span>
                    </a>
                }
            }
            else
            {
                <p class="text-muted">You haven't added any links yet.</p>
            }
        </div>

        <!-- Public Link Card -->
        <div class="card shadow-sm mb-4" style="max-width: 700px; margin: 0 auto;">
            <div class="card-body">
                <h5 class="card-title">🔗 Your Public Link</h5>
                <div class="input-group mb-3">
                    <input type="text" class="form-control" id="publicLinkInput" value="@publicUrl" readonly />
                    <button class="btn btn-outline-secondary" type="button" onclick="copyPublicLink()">Copy</button>
                    <a href="@publicUrl" target="_blank" class="btn btn-primary">View</a>
                </div>
            </div>
        </div>

        <!-- Create New Link Button -->
        <div class="text-center mb-5">
            <a asp-controller="Account" asp-action="Create" asp-route-id="@linkPage.LinkPageId"
               class="btn btn-success btn-lg shadow-sm px-4 py-2">
                + Create New Link
            </a>
        </div>

        <!-- Link Management Section -->
        @if (Model.LinkPageLinkItemVMs.Any())
        {
            <div class="card shadow-sm mt-4" style="max-width: 800px; margin: 0 auto;">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Manage Your Links</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        @foreach (var item in Model.LinkPageLinkItemVMs.OrderBy(x => x.Order))
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-start">
                                <div class="me-auto">
                                    <div class="fw-bold">@item.Label</div>
                                    <a href="@item.Url" target="_blank"
                                       class="truncate-url"
                                       title="@item.Url">
                                        @item.Url
                                    </a>
                                </div>
                                <div class="text-end">
                                    <span class="badge bg-secondary mb-2">Order #@item.Order</span><br />
                                    <a asp-controller="Account" asp-action="Edit" asp-route-id="@item.LinkItemId" class="btn btn-warning btn-sm me-2">Edit</a>
                                    <a asp-controller="Account" asp-action="Delete" asp-route-id="@item.LinkItemId" class="btn btn-danger btn-sm">Delete</a>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-warning text-center">
            No LinkPage found for your account.
        </div>
    }
</div>

@section Scripts {
    <script>
        function copyPublicLink() {
            const input = document.getElementById('publicLinkInput');
            input.select();
            input.setSelectionRange(0, 99999);
            document.execCommand("copy");
            alert("Public link copied to clipboard!");
        }
    </script>
}
@model TapLinko.Models.LinkPage

@{
    ViewData["Title"] = "My Link Page";
}

<div class="card shadow p-4 mb-4">
    <h2>@Model.LinkPageTitle</h2>

   

    <div class="d-flex align-items-center gap-3 mb-4">
        <img src="@Model.ProfileImageUrl" alt="Profile" class="rounded-circle" width="100" height="100" />
        <div>
            <p class="mb-1"><strong>Bio:</strong></p>
            <p>@Model.Bio</p>
        </div>
    </div>

    <a asp-controller="LinkPage" asp-action="Edit" asp-route-id="@Model.LinkPageId" class="btn btn-secondary">
        Edit Link Page
    </a>
</div>
@model TapLinko.Models.ViewModel.LinkPageLinkItemVM

@{
    ViewData["Title"] = "Delete Link";
}

<h2>Delete Link</h2>

<h4>Are you sure you want to delete this link?</h4>
<hr />

<div class="alert alert-warning">
    <strong>Warning:</strong> This action cannot be undone.
</div>

<div class="form-group">
    <label>Label</label>
    <input asp-for="Label" class="form-control" readonly />
</div>

<div class="form-group">
    <label>URL</label>
    <input asp-for="Url" class="form-control" readonly />
</div>

<div class="form-group">
    <label>Order</label>
    <input asp-for="Order" class="form-control" readonly />
</div>

<form asp-action="Delete" method="post">
    @* Hidden field to send the ID of the item *@
    <input type="hidden" asp-for="LinkItemId" />

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
@model TapLinko.Models.ViewModel.LinkPageUserVM

@{
    ViewData["Title"] = "Edit Link Page";
}

<h2>Edit Link Page</h2>

<form asp-action="Edit" asp-route-id="@Model.LinkPageId" method="post">
    @Html.AntiForgeryToken()

    <!-- Hidden input to preserve the ID -->
    <input type="hidden" asp-for="LinkPageId" />

    <div class="form-group mb-3">
        <label asp-for="LinkPageTitle" class="form-label"></label>
        <input asp-for="LinkPageTitle" class="form-control" />
        <span asp-validation-for="LinkPageTitle" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Bio" class="form-label"></label>
        <textarea asp-for="Bio" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Bio" class="text-danger"></span>
    </div>

    <!-- Optional: keep image URLs in hidden fields to avoid clearing them on post -->
    <input type="hidden" asp-for="ProfileImageUrl" />
    <input type="hidden" asp-for="BannerImageUrl" />

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}